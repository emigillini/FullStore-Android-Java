<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#01062E">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#333333"
                android:endColor="#000000"
                android:angle="45" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="10dp"
                android:bottom="10dp"/>
        </shape>
    </item>
</ripple>